version: '2'

services:
  lfs:
    restart: unless-stopped
    privileged: true
    image: The-Kernel-Toolkit/docker-lfs-build
    volumes:
      - ./book:/lfs/book
      - ./image:/lfs/image
      - ./sources:/lfs/sources
      - ./tools:/lfs/tools
      - ./lfs:/lfs
      - ./dist:/dist
    entrypoint: ["sleep", "inf"]
